{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@misky/tiptap-extensions": [
                "libs/@tiptap/extensions/index.js"
            ],
            "@misky/tiptap-marks": [
                "libs/@tiptap/marks/index.js"
            ],
            "@misky/tiptap-nodes": [
                "libs/@tiptap/nodes/index.js"
            ],
            "@misky/tiptap-svelte": [
                "libs/@tiptap/svelte/index.js"
            ],
            "@misky/prose-utils": [
                "libs/@misky/prose-utils/index.js"
            ],
            "@local/shared": [
                "libs/@local/shared/index.js"
            ]
        },
        "strict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
