{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@misky/extension-table": [
                "libs/extension-table/src/lib/index.js"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
