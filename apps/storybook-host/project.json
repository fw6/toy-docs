{
    "name": "storybook-host",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/storybook-host/src",
    "projectType": "application",
    "generators": {},
    "targets": {
        "storybook": {
            "executor": "@nx/storybook:storybook",
            "options": {
                "port": 4400,
                "configDir": "apps/storybook-host/.storybook",
                "https": true,
                "host": "127.0.0.1",
                "sslCert": "cert.pem",
                "sslKey": "key.pem"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nx/storybook:build",
            "outputs": [
                "{options.outputDir}"
            ],
            "options": {
                "outputDir": "dist/storybook",
                "configDir": "apps/storybook-host/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        }
    },
    "tags": [
        "storybook:host",
        "type:app"
    ]
}
