{
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "name": "tiptap/nodes",
    "sourceRoot": "libs/@tiptap/nodes",
    "projectType": "library",
    "generators": {},
    "targets": {
        "storybook": {
            "executor": "@nx/storybook:storybook",
            "options": {
                "port": 4403,
                "configDir": "libs/@tiptap/nodes/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nx/storybook:build",
            "outputs": [
                "{options.outputDir}"
            ],
            "options": {
                "outputDir": "dist/storybook/tiptap-nodes",
                "configDir": "libs/@tiptap/nodes/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        }
    },
    "tags": [
        "scope:tiptap",
        "type:types"
    ],
    "namedInputs": {
        "production": [
            "default",
            "!{projectRoot}/**/*.spec.ts",
            "!{projectRoot}/**/*.spec.tsx",
            "!{projectRoot}/**/*.md"
        ]
    }
}
