{
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "name": "svelte-spreadsheet",
    "sourceRoot": "libs/@misky/svelte-spreadsheet",
    "projectType": "library",
    "generators": {},
    "targets": {
        "storybook": {
            "executor": "@nx/storybook:storybook",
            "options": {
                "port": 4405,
                "configDir": "libs/@misky/svelte-spreadsheet/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nx/storybook:build",
            "outputs": [
                "{options.outputDir}"
            ],
            "options": {
                "outputDir": "dist/storybook/svelte-spreadsheet",
                "configDir": "libs/@misky/svelte-spreadsheet/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ./scripts/stylify.js",
                "cwd": "libs/@misky/svelte-spreadsheet"
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ./scripts/stylify.js --w",
                "cwd": "libs/@misky/svelte-spreadsheet"
            }
        }
    },
    "tags": [
        "storybook:ref",
        "scope:components"
    ],
    "namedInputs": {
        "production": [
            "default",
            "!{projectRoot}/**/*.spec.ts",
            "!{projectRoot}/**/*.spec.tsx",
            "!{projectRoot}/**/*.md"
        ]
    }
}
